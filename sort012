#include<bits/stdc++.h>
using namespace std;
void sort012(int *arr, int n)
{
  //!st solution
// 	sort(arr,arr+n);
	
// 	for(int i=0;i<n;i++)
// 	{
// 		cout<<arr[i]<<" ";
// 	}
	
   //   Write your code here

// O(n) Approch
	int c0=0,c1=0,c2=0;


    for(int i=0;i<n;i++)
    {
        if(arr[i]==0)
        {
            c0++;
        }
        else if(arr[i]== 1)
        {
            c1++;
        }
        else if(arr[i]==2)
        {
            c2++;
        }
    }

    int i=0;
    
    while(c0--)
    {
        arr[i]=0;
        i++;
    }
    while(c1--)
    {
        arr[i]=1;
        i++;
    }
    while(c2--)
    {
        arr[i]=2;
        i++;
    }    
    


//     for(int i=0;i<n;i++)
//     {
//         cout<<arr2[i]<<" ";
//     }
}
